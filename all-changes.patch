+  }
+
+  async startConnection(getToken) {
+    try {
+      if (this.connection?.state === 'Connected') {
+        return;
+      }
+
+      const token = getToken();
+      if (!token) {
+        throw new Error('No access token available');
+      }
+
+      this.connection = new HubConnectionBuilder()
