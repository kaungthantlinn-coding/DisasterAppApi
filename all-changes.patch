+        this.isConnected = false;
+        console.log('SignalR: Connection closed');
+      });
+
+      this.connection.onreconnected(() => {
+        this.isConnected = true;
+        console.log('SignalR: Reconnected');
+        this.joinUserManagementGroup();
+      });
